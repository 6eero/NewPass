<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:id="@+id/background_inputbox_1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/background_inputbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_tw">
    </ImageView>

    <ImageView
        android:id="@+id/background_inputbox_2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/background_inputbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_tw" />

    <EditText
        android:id="@+id/login_tw_name"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:ems="10"
        android:fontFamily="@font/jetbrainsmonoregular"
        android:hint="Name"
        android:paddingBottom="22dp"
        android:textSize="16dp"
        android:inputType="text"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/background_secondary"
        android:textColorHint="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="@+id/background_inputbox_1"
        app:layout_constraintEnd_toEndOf="@+id/background_inputbox_1"
        app:layout_constraintStart_toStartOf="@+id/background_inputbox_1"
        app:layout_constraintTop_toTopOf="@+id/background_inputbox_1" />


    <TextView
        android:id="@+id/welcome_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jetbrainsmonobold"
        android:text="testo\nbenvenuto"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/login_tw_password"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:ems="10"
        android:textSize="16dp"
        android:fontFamily="@font/jetbrainsmonoregular"
        android:hint="Password"
        android:inputType="text"
        android:paddingBottom="22dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_primary"
        android:backgroundTint="@color/background_secondary"
        app:layout_constraintBottom_toBottomOf="@+id/background_inputbox_2"
        app:layout_constraintEnd_toEndOf="@+id/background_inputbox_2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/background_inputbox_2"
        app:layout_constraintTop_toTopOf="@+id/background_inputbox_2" />


    <ImageButton
        android:id="@+id/register_button"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/register_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Register]"
        android:textColor="@color/black"
        android:fontFamily="@font/jetbrainsmonoregular"
        app:layout_constraintBottom_toBottomOf="@+id/register_button"
        app:layout_constraintEnd_toEndOf="@+id/register_button"
        app:layout_constraintStart_toStartOf="@+id/register_button"
        app:layout_constraintTop_toTopOf="@+id/register_button" />

    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Login]"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/jetbrainsmonoregular"
        app:layout_constraintBottom_toBottomOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toTopOf="@+id/login_button" />


</androidx.constraintlayout.widget.ConstraintLayout>